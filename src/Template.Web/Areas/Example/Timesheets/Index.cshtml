
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8">
    <title>Gestione Timesheet</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .fixed-overlay {
            position: fixed;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            display: none;
            z-index: 999;
        }

        .form-container {
            text-align: center;
        }

        .fixed-overlay.active {
            display: block;
        }
    </style>
</head>
<body>
    <div class="container mt-4" style="padding-left: 200px;">
        <h2>Gestione Timesheet</h2>
        <div class="mb-3">
            <button class="btn btn-primary">Nome timesheet</button>
            <button class="btn btn-secondary">Ricerca</button>
            <button class="btn btn-success" onclick="showTimesheetForm()">+ Nuovo Timesheet</button>
        </div>
        <div id="timesheetForm" class="fixed-overlay">
            <div class="form-container">
                <h3>Crea Timesheet</h3>
                <form  method="post" action="/Example/Timesheets/Edit">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Nome Timesheet</label>
                        <input type="text" class="form-control" id="timesheetName" name="Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Giorni Settimanali</label>
                        <div id="daysCheckboxContainer">
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="0"> Luned√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="1"> Marted√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="2"> Mercoled√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="3"> Gioved√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="4"> Venerd√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="5"> Sabato</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="6"> Domenica</div>
                        </div>
                    </div>
                    <input type="hidden" id="weekDaysEncoded" name="WeekDaysEncoded" />
                    <button type="submit" class="btn btn-primary" onclick="saveTimesheet(event)">Salva</button>
                    <button type="button" class="btn btn-secondary" onclick="hideTimesheetForm()">Chiudi</button>
                </form>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>TimesheetId</th>
                    <th>Nome timesheet</th>
                    <th>Giorni timesheet</th>
                    <th>Delete timesheet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var timesheet in Model.Timesheets)
                {
                    <tr>
                        <td>@timesheet.Id</td>
                        <td>@(string.IsNullOrEmpty(timesheet.Name) ? "N/D" : timesheet.Name)</td>
                        <td>@string.Join("-", timesheet.WeekDay)</td>
                        <td>
                            <form method="post" asp-action="Delete" asp-controller="Timesheets" asp-area="Example"
                                  onsubmit="return confirm('Sei sicuro di voler cancellare questo timesheet?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@timesheet.Id" />
                                <button type="submit" class="btn btn-danger">üóëÔ∏è</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

<script>
    function deleteTimesheet(id) {
        if (confirm("Sei sicuro di voler cancellare questo timesheet?")) {
            fetch(`/Example/Timesheets/Delete`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ id: id })
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                } else {
                    alert("Errore nella cancellazione");
                }
            });
        }
    }
    function showTimesheetForm() {
        document.getElementById("timesheetForm").classList.add("active");
    }

    function hideTimesheetForm() {
        document.getElementById("timesheetForm").classList.remove("active");
    }

