@using SystemTextJson = System.Text.Json.JsonSerializer
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8">
    <title>Gestione Timesheet</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .fixed-overlay {
            position: fixed;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            display: none;
            z-index: 999;
        }

        .form-container {
            text-align: center;
        }

        .fixed-overlay.active {
            display: block;
        }
    </style>
</head>
<body>
    <div class="container mt-4" style="padding-left: 200px;">
        <h2>Gestione Timesheet</h2>
        <div class="mb-3">
            <button class="btn btn-primary">Nome timesheet</button>
            <button class="btn btn-secondary">Ricerca</button>
            <button class="btn btn-success" onclick="showTimesheetForm()">+ Nuovo Timesheet</button>
        </div>
        <div id="timesheetForm" class="fixed-overlay">
            <div class="form-container">
                <h3>Crea Timesheet</h3>
                <form  method="post" action="/Example/Timesheets/Edit">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Nome Timesheet</label>
                        <input type="text" class="form-control" id="timesheetName" name="Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Giorni Settimanali</label>
                        <div id="daysCheckboxContainer">
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="0"> Luned√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="1"> Marted√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="2"> Mercoled√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="3"> Gioved√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="4"> Venerd√¨</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="5"> Sabato</div>
                            <div class="form-check"><input type="checkbox" class="form-check-input" value="6"> Domenica</div>
                        </div>
                    </div>
                    <input type="hidden" id="weekDaysEncoded" name="WeekDaysEncoded" />
                    <div class="mb-3">
                        <label class="form-label">Ora Inizio</label>
                        <input type="time" class="form-control" id="StartTime" name="StartTime">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ora Fine</label>
                        <input type="time" class="form-control" id="EndTime" name="EndTime">
                    </div>
                    <button type="submit" class="btn btn-primary" onclick="saveTimesheet(event)">Salva</button>
                    <button type="button" class="btn btn-secondary" onclick="hideTimesheetForm()">Chiudi</button>
                </form>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>TimesheetId</th>
                    <th>Nome timesheet</th>
                    <th>Giorni timesheet</th>
                    <th>Inizio lavoro</th>
                    <th>Fine lavoro</th>
                    <th>Modifica timesheet</th>
                    <th>Delete timesheet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var timesheet in Model.Timesheets)
                {
                    <tr>
                        <td>@timesheet.Id</td>
                        <td>@(string.IsNullOrEmpty(timesheet.Name) ? "N/D" : timesheet.Name)</td>
                        <td>@string.Join("-", timesheet.WeekDay)</td>
                        <td>@timesheet.StartTime.ToString(@"hh\:mm")</td>
                        <td>@timesheet.EndTime.ToString(@"hh\:mm")</td>
                        <td>
                            <button class="btn btn-warning"
                                data-id="@timesheet.Id"
                                data-name="@timesheet.Name"
                                data-weekdays="@string.Join("-", timesheet.WeekDay)"
                                data-starttime="@timesheet.StartTime.ToString(@"hh\:mm")"
                                data-endtime="@timesheet.EndTime.ToString(@"hh\:mm")"
                                onclick="handleEditClick(this)">
                                ‚úèÔ∏è
                            </button>
                        </td>
                        <td>
                            <form method="post" asp-action="Delete" asp-controller="Timesheets" asp-area="Example"
                                  onsubmit="return confirm('Sei sicuro di voler cancellare questo timesheet?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@timesheet.Id" />

                                <button type="submit" class="btn btn-danger">üóëÔ∏è</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

<script>
    function deleteTimesheet(id) {
        if (confirm("Sei sicuro di voler cancellare questo timesheet?")) {
            fetch(`/Example/Timesheets/Delete`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ id: id })
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                } else {
                    alert("Errore nella cancellazione");
                }
            });
        }
    }

    function handleEditClick(button) {
        const id = button.getAttribute('data-id');
        const name = button.getAttribute('data-name');
        const weekdays = button.getAttribute('data-weekdays');
        const startTime = button.getAttribute('data-starttime');
        const endTime = button.getAttribute('data-endtime');

        editTimesheet(id, name, weekdays, startTime, endTime);
    }

    function editTimesheet(id, name, weekdays, startTime, endTime) {
        showTimesheetForm();

        document.getElementById("timesheetName").value = name;
        document.querySelector("input[name='StartTime']").value = startTime;
        document.querySelector("input[name='EndTime']").value = endTime;

        document.querySelectorAll("#daysCheckboxContainer input[type='checkbox']").forEach(cb => cb.checked = false);

        const dayIndices = weekdays.split("-");
        dayIndices.forEach(idx => {
            const cb = document.querySelector(`#daysCheckboxContainer input[type='checkbox'][value='${idx}']`);
            if (cb) cb.checked = true;
        });

        const form = document.querySelector("#timesheetForm form");
    
        let existing = form.querySelector("input[name='Id']");
        if (existing) existing.remove();

        const hiddenId = document.createElement("input");
        hiddenId.type = "hidden";
        hiddenId.name = "Id";
        hiddenId.value = id;
        form.appendChild(hiddenId);
    }
    

    const weekDays = ["Luned√¨", "Marted√¨", "Mercoled√¨", "Gioved√¨", "Venerd√¨", "Sabato", "Domenica"];
    const selectedDays = [];

    function showTimesheetForm() {
        const form = document.querySelector("#timesheetForm form");

        let existingId = form.querySelector("input[name='Id']");
        if (!existingId) {
            form.reset();
            document.querySelectorAll("#daysCheckboxContainer input[type='checkbox']").forEach(cb => cb.checked = false);
        }

        document.getElementById("timesheetForm").classList.add("active");
    }

    function hideTimesheetForm() {
        document.getElementById("timesheetForm").classList.remove("active");
    }

    function saveTimesheet(event) {
        event.preventDefault();
        let name = document.getElementById("timesheetName").value;
        let checkboxes = document.querySelectorAll("#daysCheckboxContainer input:checked");
        let days = Array.from(checkboxes).map(cb => cb.value);

        if (name && days.length > 0) {
            let daysIndices = days;
            let result = daysIndices.join("-");

            document.getElementById("weekDaysEncoded").value = result;

            const form = event.target.closest("form");
            const idInput = form.querySelector("input[name='Id']");
            console.log("Campo Id:", idInput ? idInput.value : "Nessuno");

            form.submit();
        } else {
            alert("Compila tutti i campi!");
        }
    }
</script>